{% extends 'base.html.twig' %}

{% block title %}Hello IndexController!{% endblock %}

{% block body %}
    <div class="container">
        <div class="row px-5 py-3 border-bottom">
            <div class="col-md-8">
                WeMovies
            </div>
            <div class="col-md-4">
                <div class="input-group mb-3 border border-secondary rounded-3">
                    <input type="text" id="searchInput" placeholder="Rechercher des films..." class="form-control border-0">
                    <button class="input-group-text bg-white border-0"><i class="bi bi-search text-secondary"></i></button>
                </div>
                <div id="suggestions" class="suggestions"></div>
            </div>
        </div>
        <div class="row py-3 mb-4">
            <div class="col-12 text-center">
                <iframe width="560" height="315" src="{{ youtube_url }}{{ TopRatedMovie.videos.key }}"
                        title="{{ TopRatedMovie.title }}" frameborder="0"
                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                        allowfullscreen>
                </iframe>
            </div>
        </div>

        <div class="row">
            <div class="col-md-3 col-12 mb-3 border text-secondary text-center">
                <h5 class="my-3">Cat√©gories</h5>
                <div class="row">
                    {% for genre in genres %}
                        <div class="col-lg-12 col-md-12 col-sm-6">
                            <div class="form-check mb-1">
                                <input type="checkbox" class="btn-check checkbox_genre" autocomplete="off"  value="{{ genre.id }}" id="genre_{{ genre.id }}">
                                <label class="btn btn-sm btn-outline-primary w-100" for="genre_{{ genre.id }}">{{ genre.name }}</label>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div id="search_results" class="col-md-9 col-12">

            </div>
            <div id="modal-container"></div>
        </div>
    </div>
{% endblock %}